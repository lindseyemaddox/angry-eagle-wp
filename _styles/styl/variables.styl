
$blue = #79887b
$white = #f2f3e4
$brown = #504e3c
$green = #b4aa5e
$mint	= #b8c6bc

$layout-max-width = 1000px
$primary-font = 'Source Sans Pro'
$headline-font = 'Passion One'
$performance-font = 'Arial', sans-serif
$primary-font-size = 16px
$primary-font-line-height = 1.5em
$light = 300
$regular = 400
$semibold = 600
$bold = 700

primary-font(w)
  font-family: $primary-font, $performance-font
  font-weight: w
  line-height: $primary-font-line-height

secondary-font()
  font-family: $headline-font, $performance-font
  line-height: $primary-font-line-height

condiment()
	font-family: 'Condiment', cursive

ssp-italic(w)
	font-family: $primary-font
	font-weight: w
	font-style: italic

body
	-webkit-font-smoothing: antialiased
	font-size: 1rem

html
  font-size: $primary-font-size

header, footer
  font-size: .9rem

.inner
	max-width: $layout-max-width
	width: 80%
	margin: 0 auto

.clear
	clear: both

.picturefill img
  width: 100%

h1
	secondary-font()
	text-transform: uppercase
	font-size: 2.65em
	color: $brown
	text-align: center
	padding: 62px 0 15px

h2
	secondary-font()
	text-align: center
	font-size: 2.65em
	text-transform: uppercase
	color: $brown
	padding-bottom: 17px

	&.alt
		color: #fff

	&.multiple
		padding-top: 55px

	&.subh2
		font-size: 1.5em

h3
	primary-font($light)
	font-size: 1.33em
	line-height: 1.25em
	color: $brown
	padding-bottom: 65px

	a
		color: $green
		text-decoration: none

	&.alt
		line-height: 5em
		color: #fff
		text-align: center
		padding-bottom: 0

		a
			color: #fff
			text-decoration: none
			font-weight: bold

h4
	color: #fff
	secondary-font()
	font-size: 2em
	text-transform: uppercase
	text-align: center
	line-height: 0.69em
	padding: 20px 0 26px
	border-bottom: 1px solid #fff

	&.alt
		border-bottom: none
		color: $brown

h5
	secondary-font()
	font-size: 3em
	color: $brown
	text-align: center
	padding-top: 26px
	text-transform: uppercase
	line-height: .8em

h6
	primary-font($semibold)
	font-size: 1.33em
	color: $brown
	text-transform: uppercase

p
	padding-bottom: 20px
	primary-font($light)
	font-size: 1em
	color: $brown
	line-height: 1.3em

	&.alt
		color: #fff
		a
			color: #fff
			font-weight: bold

	a
		color: $green
		text-decoration: underline
		&:hover
			color: $mint

	&.last
		padding-bottom: 100px

.italic
	ssp-italic($regular)

ul
	padding: 0 0 20px 20px

	li
		primary-font($light)
		font-size: 1em
		color: $brown
		line-height: 1.3em
		list-style-type: disc

button.print
	font-size: 0.77em
	color: $brown
	float: right
	width: 100px

table
	width: 100%
	margin-bottom: 10px

	tr
		td
			primary-font($semibold)
			font-size: 1.12em
			color: $brown
			line-height: 1.3em
			text-transform: uppercase
			padding: 10px 20px
			border: 1px solid $brown
			text-align: center
			vertical-align: middle

			a
				color: $brown
				text-decoration: none
				&:hover
					color: $green

			&.no-padding
				padding: 0

				table
					margin-bottom: 0

			&.table-left
				width: 43%
				padding: 10px 50px

	&.dark
		background-color: $white

	&.pad
		margin-top: 30px
		clear: right

		&.pad-more
			margin-top: 70px

	table
		tr
			font-size: 0.88em
			primary-font($semibold)

			td
				text-transform: none
				padding: 8px 10px

			&:first-child td
				border-top: none

			&:last-child td
				border-bottom: none

			td:first-child
				border-left: none

			td:last-child
				border-right: none

a.readmore
	display: block
	font-size: 1em
	line-height: 2.3em
	color: #fff
	text-decoration: none
	text-align: right
	condiment()

	&:hover
		color: $green
		transition: color 400ms ease

.btn-container
	width: 100%
	text-align: center

.btn
	text-align: center
	margin: 0 auto
	padding: 10px 15px
	primary-font($semibold)
	color: #fff
	background-color: $green
	border-radius: 5px
	text-decoration: none
	text-transform: uppercase

/* Start: Recommended Isotope styles */

/**** Isotope Filtering ****/

.fish-item, .media-item
  z-index: 2

.isotope-hidden.fish-item, .isotope-hidden.media-item
  pointer-events: none
  z-index: 1

/**** Isotope CSS3 transitions ****/

.isotope,
.isotope .fish-item,
.isotope .media-item
  transition-duration: 0.8s

.isotope
  transition-property: height, width

.isotope .fish-item,
.isotope .media-item
  transition-property: transform, opacity

/**** disabling Isotope CSS3 transitions ****/

.isotope.no-transition,
.isotope.no-transition .fish-item,
.isotope.no-transition .media-item,
.isotope .fish-item.no-transition,
.isotope .media-item.no-transition
  transition-duration: 0s

/* End: Recommended Isotope styles */

/* disable CSS transitions for containers with infinite scrolling*/
.isotope.infinite-scrolling
  transition: none
